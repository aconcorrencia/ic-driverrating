<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:paddingLeft="16dp"
    android:paddingTop="10dp">


    <com.joooonho.SelectableRoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_car"
        app:sriv_border_color="#000"
        app:sriv_border_width="1dip"
        app:sriv_left_bottom_corner_radius="48dip"
        app:sriv_left_top_corner_radius="16dip"
        app:sriv_oval="true"
        app:sriv_right_bottom_corner_radius="16dip"
        app:sriv_right_top_corner_radius="0dip"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imgPadrao"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/ic_padrao"
        android:layout_below="@+id/txtModelo"
        android:layout_alignRight="@+id/img"
        android:layout_alignEnd="@+id/img" />

    <TextView
        android:id="@+id/txtNomePerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/img"
        android:paddingRight="16dp"

        android:text="Nome do Perfil:"

        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtMarca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtNomePerfil"
        android:layout_below="@+id/txtNomePerfil"
        android:paddingRight="16dp"
        android:text="Marca:"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/txtModelo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtMarca"
        android:layout_alignStart="@+id/txtMarca"
        android:layout_below="@+id/txtMarca"
        android:paddingRight="16dp"
        android:text="Modelo:"

        android:textSize="10sp" />

    <TextView
        android:id="@+id/txtMotor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtMarca"
        android:layout_alignStart="@+id/txtMarca"
        android:layout_below="@+id/txtModelo"
        android:paddingRight="16dp"
        android:text="Motor:"

        android:textSize="10sp" />

    <TextView
        android:id="@+id/txtVersao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtMarca"
        android:layout_alignStart="@+id/txtMarca"
        android:layout_below="@+id/txtMotor"
        android:paddingRight="16dp"
        android:text="VersÃ£o:"
        android:layout_marginBottom="5dp"
        android:textSize="10sp" />
    <View
        android:id="@+id/vw_divider"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_below="@+id/txtVersao"
        android:background="@color/black"
        android:layout_marginRight="10dp"
        android:layout_alignLeft="@+id/txtModelo"
        android:layout_alignStart="@+id/txtModelo" />



</RelativeLayout>
